class cal():
    def __init__(self, a, b):
        self.a = a
        self.b = b

    def add(self):
        return self.a + self.b

    def sub(self):
        return self.a - self.b

    def mul(self):
        return self.a * self.b

    def div(self):
        return self.a / self.b


a = int(input("Enter the first number: "))
b = int(input("Enter the second number: "))

obj = cal(a, b)
while True:
    def menu():
        x = ('1. Addition 2.Subtraction 3.Multiplication 4.Division')
        print(x)




    menu()

    option = int(input("Input the operation to be performed"))
    if option == 1:
        print("Result is : ", obj.add())
    elif option == 2:
        print("Result: ", obj.sub())
    elif option == 3:
        print("Result is: ", obj.mul())
    elif option == 4:
        print("Result is: ", obj.div())
    else:
        print("Invalid Option")

print()
